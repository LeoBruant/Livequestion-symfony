{% extends 'base.html.twig' %}

{% block css %}base{% endblock %}

{% block title %}Livequestion | Connexion{% endblock %}

{% block body %}
	<div class="col-md-3 text-center main">
		<h1>Connexion</h1>

		{{ form_start(form) }}
			{{ form_errors(form) }}
			<div class="form-group">
				{{ form_widget(form.Username, {'attr': {'placeholder': 'Username'}}) }}
			</div>
			<div class="form-group">
				{{ form_widget(form.Password, {'attr': {'placeholder': 'Password'}}) }}
			</div>
		{{ form_end(form) }}

		<p>Pas de compte ? Creez-en un <a href={{'profile/new'}}>ici</a></p>
	</div>
{% endblock %}